
{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "classic",
    "sourceMap": true,
    "target": "es5",
    "jsx": "preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitThis": true,
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./src/**/*.tsx", "src/vue-shims.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}
